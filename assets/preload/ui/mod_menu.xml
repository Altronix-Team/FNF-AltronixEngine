<?xml version="1.0" encoding="utf-8" ?>
<data>
  <!-- Font definitions -->
  <!-- This broke earlier because in order to set style="bold" you need to have a separate font file called vcrb.ttf -->
  <definition id="vcr32" font="vcr" size="32" color="0xffffff" outline="0x000000" align="center"/>
  <definition id="vcr16" font="vcr" size="16" color="0xffffff" outline="0x000000" align="center"/>
  
  <!-- App background. -->
  <background src="menubg" core="true" color="#ffffff" x="0" y="0" w="1280" h="720" />

  <!-- App layout. Make sure to specify x/y/w/h. -->
  <text text="Disabled" use_def="vcr32" x="0" y="16" width="480"/>
  <text text="Enabled" use_def="vcr32" x="800" y="16" width="480"/>
  <text text="Mod Configuration" use_def="vcr32" x="400" y="16" width="480"/>

  <modlist name="modlist_unloaded" x="16"  y="56" w="500" h="680" loaded="false" />
  <modlist name="modlist_loaded"   x="764" y="56" w="500" h="680" loaded="true"  />

  <button name="btn_loadall"           use_def="vcr16" x="576" y="180" w="260" h="80" label="Load All Mods"            />
  <button name="btn_unloadall"         use_def="vcr16" x="576" y="230" w="260" h="80" label="Unload All Mods"          />
  <button name="btn_revert"            use_def="vcr16" x="576" y="280" w="260" h="80" label="Revert Mod Config"        />
  <button name="btn_saveandexit"       use_def="vcr16" x="576" y="420" w="260" h="80" label="Save and Load Game"       />
  <button name="btn_exitwithoutsaving" use_def="vcr16" x="576" y="450" w="260" h="80" label="Discard Changes and Load Game" />

</data>